//  Example of fsm to manage login
//  on server side

[init]
    rq_key              ->  w_login|tr  /   send_key|tr        //  this is a comment
    timer               ->  init

[w_login]
    rq_login            ->  login       /   send_login|tr
    timer
        & timeout|tr    ->  error
                        ->  w_login
[login]
    rq_logout           ->  logout      /   send_logou|tr
    heartbeat           ->  login       /   update_hbr
    timer
        & timeout       ->  logout
                        ->  login

[logout]
    timer               ->  logout
    _                   ->  testing     /   send_logout

[error]
    _                   ->  error


[testing]
    rq_key  & ho        ->  logout
                        ->  testing
    _     & hia         ->  login
                        ->  init
